############################

layer {
  name: "block_output"
  type: "Concat"
  bottom: "conv_block_multiscale_3x3"
  bottom: "conv_block_multiscale_5x5"
  bottom: "conv_block_multiscale_7x7"
  bottom: "conv_block_multiscale_9x9"
  top: "block_output"
}

############################

layer {
  name: "fc_512"
  type: "InnerProduct"
  bottom: "block_output"
  top: "fc_512"
  param {
    lr_mult: 1
    decay_mult: 2
  }
  param {
    lr_mult: 2
    decay_mult: 0
  }
  inner_product_param {
    num_output: 512
    weight_filler {
      type: "xavier"
    }
  }
}

layer {
  name: "fc_512/relu"
  type: "ReLU"
  bottom: "fc_512"
  top: "fc_512"
}

layer {
  name: "fc_512/drop"
  type: "Dropout"
  bottom: "fc_512"
  top: "fc_512"
  dropout_param {
    dropout_ratio: 0.5
  }
  include {
    phase: TRAIN
  }
}

layer {
  name: "fc_output"
  type: "InnerProduct"
  bottom: "fc_512"
  top: "fc_output"
  param {
    lr_mult: 2
    decay_mult: 1
  }
  param {
    lr_mult: 4
    decay_mult: 0
  }
  inner_product_param {
    num_output: 10
    weight_filler {
      type: "gaussian"
      std: 0.01
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

layer {
  name: "loss_output"
  type: "SoftmaxWithLoss"
  bottom: "fc_output"
  bottom: "label"
  top: "loss_output"
  include {
    phase: TRAIN
  }
  loss_weight: 1.0
}
layer {
  name: "accuracy_output"
  type: "Accuracy"
  bottom: "fc_output"
  bottom: "label"
  top: "accuracy_output"
  include {
    phase: TEST
  }
}

############################
