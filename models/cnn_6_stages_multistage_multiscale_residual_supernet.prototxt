layer {
  name: "block_multiscale"
  type: "Concat"
  bottom: "conv_block1_pool"
  bottom: "conv_block2_pool"
  bottom: "conv_block3_pool"
  bottom: "conv_block4_pool"
  bottom: "conv_block5_pool"
  top: "block_multiscale"
}

############################

layer {
  name: "conv_block_multiscale_3x3"
  type: "Convolution"
  bottom: "block_multiscale"
  top: "conv_block_multiscale_3x3"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 1
    decay_mult: 0
  }
  convolution_param {
    num_output: 8
    kernel_size: 3
    stride: 2
    weight_filler {
      type: "xavier"
    }
  }
}

layer {
  name: "conv_block_multiscale_5x5"
  type: "Convolution"
  bottom: "block_multiscale"
